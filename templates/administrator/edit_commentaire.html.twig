{% extends 'base.admin.html.twig' %}

{% block title %}Liste Des Commentaires{% endblock %}

{% block body %}

    <p>
    <br> </br>
    <a class="btn btn-warning" href="{{path('commentaire.creation')}}">Nouveaux Commentaire</a>
    <br></br>
    </p>
    
    <table class="table table-striped table-bordered table-hover">
    
        <tr>
            <th>id</th>
            <th>Auteur</th>
            <th>Commentaire</th>
            <th>modifier</th>
            <th>supprimer</th>
        </tr>

        {% for commentaire in commentaires %}
            <tr>
                <td>{{commentaire.id}}</td>
                <td>{{commentaire.auteur}}</td>
                <td>{{commentaire.commentaire}}</td>
                <td><a href="{{path('commentaire.edition', {'id': commentaire.id })}}" class="btn btn-primary">Editer</a></td>
                <td>
                    <form method="post" action="{{path('commentaire.supression', {'id': commentaire.id })}}">
                        <input type="hidden" name="_method" value="DELETE">
                        <button class="btn btn-primary"> Supprimer </button>
                    </form>
                </td>                                       
            </tr>
        {% endfor %}    
    
    </table>

{% endblock %}