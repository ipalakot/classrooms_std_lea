{% extends 'base.admin.html.twig' %}

{% block title %}Liste Des Commentaires!{% endblock %}

{% block body %}

    <p><a class="btn btn-warning" href="#">Nouvelle Article</a></p>
    
    <table class="table table-striped table-bordered table-hover">
    
        <tr>
            <th>id</th>
            <th>Auteur</th>
            <th>Commentaire</th>
            <th>modifier</th>
            <th>supprimer</th>
        </tr>

        {% for commentaire in commentaires %}
            <tr>
                <td>{{commentaire.id}}</td>
                <td>{{commentaire.auteur}}</td>
                <td>{{commentaire.commentaire}}</td>
                <td><a href="#" class="btn btn-primary">Editer</a></td>
                <td><a href="#" class="btn btn-primary">Suprimer</a></td>                                       
            </tr>
        {% endfor %}    
    
    </table>

{% endblock %}