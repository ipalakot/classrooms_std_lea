{% extends 'base.admin.html.twig' %}

{% block title %}Liste Des Cat√©gories!{% endblock %}

{% block body %}
    <p>
    <br> </br>
    <a class="btn btn-warning" href="{{path('categorie.creation')}}">Nouvelle Categorie</a>
    <br> </br>
    </p>

    <table class="table table-striped table-bordered table-hover">

        <tr>
            <th>id</th>
            <th>Titre</th>
            <th>Resumer</th>
            <th>modifier</th>
            <th>supprimer</th>
        </tr>

        {% for categorie in categories %}
            <tr>
                <td>{{categorie.id}}</td>
                <td>{{categorie.titre}}</td>
                <td>{{categorie.resumer}}</td>
                <td><a href="{{path('categorie.edition', {'id': categorie.id })}}" class="btn btn-primary">Editer</a></td>
                <td>
                    <form method="post" action="{{path('categorie.supression', {'id': categorie.id })}}">
                        <input type="hidden" name="_method" value="DELETE">
                        <button class="btn btn-primary"> Supprimer </button>
                    </form>
                </td>                                               
            </tr>
        {% endfor %}    
    
    </table>

{% endblock %}